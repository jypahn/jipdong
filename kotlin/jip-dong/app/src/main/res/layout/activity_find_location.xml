<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindRoommate.FindLocation">


    <TextView
        android:id="@+id/text"
        android:text="지역선택"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/arrow_left"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/backbutton"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#000000"/>

    <ListView
        android:id="@+id/city"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="#808080"
        android:cacheColorHint="#5E5E5E"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbutton"
        app:layout_constraintVertical_weight="5" />

    <Button
        android:id="@+id/seoul"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:text="서울"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/city" />

    <Button
        android:id="@+id/whiteseoul"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:text="서울"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/city" />

    <Button
        android:id="@+id/gwangju"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:text="광주"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seoul" />

    <Button
        android:id="@+id/whitegwangju"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:text="광주"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seoul" />

    <ListView
        android:id="@+id/country"
        android:layout_width="310dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/city"
        app:layout_constraintTop_toBottomOf="@+id/backbutton"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="5" />

    <Button
        android:id="@+id/allseoul"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:text="서울 전체"
        android:background="@color/white"
        android:layout_marginLeft="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/country"
        />

    <Button
        android:id="@+id/gwangsangu"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:text="광산구"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/country" />

    <Button
        android:id="@+id/namgu"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:text="남구"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gwangsangu" />

    <Button
        android:id="@+id/donggu"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:text="동구"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namgu" />

    <Button
        android:id="@+id/bukgu"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:text="북구"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donggu" />

    <Button
        android:id="@+id/seogu"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:background="@color/white"
        android:text="서구"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bukgu" />



</androidx.constraintlayout.widget.ConstraintLayout>