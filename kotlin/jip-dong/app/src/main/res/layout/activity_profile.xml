<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="프로필"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



<ImageButton
    android:id="@+id/prdileimage"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/avatarimage2"
    android:scaleType="centerCrop"
    android:padding="0dp"
    app:layout_constraintTop_toBottomOf="@+id/text"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"

    />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="프로필"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintStart_toEndOf="@+id/prdileimage"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />



    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#5e91a0ff"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/prdileimage"
        app:layout_constraintBottom_toTopOf="@id/line1"
        ></View>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/infobutton" />



    <Button
        android:id="@+id/infobutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:text="회원정보"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintStart_toStartOf="parent"
       ></Button>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/infobutton" />

    <Button
        android:id="@+id/myroom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:text="내방정보"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@+id/infobutton"
        app:layout_constraintStart_toStartOf="parent"
        ></Button>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/myroom" />

    <Button
        android:id="@+id/breakdown"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:text="내 글 찾기"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@+id/myroom"
        app:layout_constraintStart_toStartOf="parent"
        ></Button>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/breakdown" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#5e91a0ff"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        app:layout_constraintBottom_toTopOf="@id/line5"
      ></View>


    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/inquiry" />

    <Button
        android:id="@+id/inquiry"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:text="문의하기"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@+id/breakdown"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="left"
        android:paddingLeft="30dp"
        ></Button>

    <View
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/inquiry" />



    <Button
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:text="설정"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@+id/inquiry"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="left"
        android:paddingLeft="30dp"
        ></Button>

    <ImageView
        android:id="@+id/settingImage"
        android:layout_width="67dp"
        android:layout_height="42dp"
        android:backgroundTint="#fff"
        android:src="@drawable/settings_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/inquiry"

       ></ImageView>

    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/settingImage" />


    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:text="로그아웃"
        android:gravity="left"
        android:textColor="#000"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line7"
        android:paddingLeft="30dp"

        ></Button>
    <View
        android:id="@+id/line8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/logout" />
    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/home_line2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/heartbutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/heart_line2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="45dp"
        app:layout_constraintStart_toEndOf="@+id/homebutton" />

    <ImageButton
        android:id="@+id/chatbutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/talk_line3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="45dp"
        app:layout_constraintEnd_toStartOf="@id/profilebutton" />

    <ImageButton
        android:id="@+id/profilebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="45dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/avatar_line2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>